{
  "name": "@attendandt/backend",
  "version": "1.0.0",
  "description": "Attendandt backend API server",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:deploy": "prisma migrate deploy",
    "db:seed": "tsx src/prisma/seed.ts",
    "db:init": "tsx scripts/init-database.ts",
    "db:setup": "tsx scripts/setup-database.ts",
    "db:test-connection": "tsx scripts/test-db-connection.ts",
    "db:apply-migrations": "tsx scripts/apply-migrations.ts",
    "db:test:reset": "cross-env NODE_ENV=test prisma migrate reset --force",
    "test": "vitest",
    "test:local": "pnpm run db:test:reset && cross-env NODE_ENV=test vitest"
  },
  "dependencies": {
    "@attendandt/shared": "workspace:*",
    "@prisma/client": "^5.2.0",
    "@supabase/supabase-js": "^2.33.0",
    "@types/ws": "^8.18.1",
    "axios": "^1.11.0",
    "axios-retry": "^4.5.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.4",
    "prisma": "^5.2.0",
    "redis": "^4.6.7",
    "winston": "^3.10.0",
    "ws": "^8.18.3",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.5.0",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.45.0",
    "multer": "^2.0.1",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.1",
    "tsx": "^3.12.7",
    "typescript": "^5.0.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}